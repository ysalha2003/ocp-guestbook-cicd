FROM nginx:alpine

# Copy nginx config
COPY nginx.conf /etc/nginx/nginx.conf

# Copy the HTML file
COPY index.html /tmp/index.html

# Inject build timestamp and copy to nginx directory
RUN apk add --no-cache tzdata && \
    BUILD_TIME=$(TZ=CET date '+%d %B %Y %H:%M CET') && \
    sed "s/__BUILD_TIMESTAMP__/$BUILD_TIME/g" /tmp/index.html > /usr/share/nginx/html/index.html && \
    rm /tmp/index.html

EXPOSE 8080

CMD ["nginx", "-g", "daemon off;"]